<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/MyCss.css" rel="stylesheet" />

   
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("XX商城", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <form class="navbar-form navbar-left" method="post" action="@Url.Action("Index","Home")">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="請輸入商品名稱" name="search" id="search">
                </div>
                
                <button type="submit" class="btn btn-default">搜尋商品</button>
            </form>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ">
                   
                    <li>@Html.ActionLink("購物車", "MyCart", "Home")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["member"] != null)
                    {
                        
                        <li>@Html.ActionLink("會員資料", "Details", "Home", new { id = Session["member"] }, "")</li>
                        <li>@Html.ActionLink("訂單", "OrderList", "Home", new { id = Session["member"] }, "")</li>
                        <li>@Html.ActionLink("登出", "Logout", "Home")</li>
                    }
                    else
                    {
                        
                        <li>@Html.ActionLink("加入會員", "creatMember", "Home")</li>
                        <li>@Html.ActionLink("登入", "Login", "Home")</li>

                    }
                    

                </ul>
            </div>


        </div>
    </div>

    <div class="container body-content well">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>